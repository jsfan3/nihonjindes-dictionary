{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Search index map/keys file",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "schema",
    "domain",
    "kind",
    "bucket"
  ],
  "properties": {
    "schema": {
      "type": "object",
      "required": [
        "name",
        "version"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      }
    },
    "domain": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "bucket": {
      "type": "string"
    },
    "keys": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "map": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "integer"
        }
      }
    }
  }
}
